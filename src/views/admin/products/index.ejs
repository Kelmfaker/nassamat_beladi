  <main class="products-content">
    <div class="products-container">
      <div class="products-header">
        <h1><i class="fas fa-boxes"></i> إدارة المنتجات</h1>
        <p><a class="chip active" href="/admin/products/new">منتج جديد</a></p>
      </div>
      <div class="products-grid">
        <% products.forEach(p => { %>
          <article class="product" data-product-id="<%= p._id %>"
            data-name="<%= (p.name||'').replace(/\"/g,'&quot;') %>"
            data-description="<%= (p.description||'').replace(/\"/g,'&quot;') %>"
            data-price="<%= p.price %>"
            data-category-id="<%= p.category?._id || '' %>"
            data-image="<%= p.image || '' %>"
            data-stock="<%= p.stock || 0 %>">
            <div class="prd-img">
              <% if (p.image) { const base = p.image.replace(/\.(jpg|jpeg|png|webp)$/i, ''); %>
                <img src="<%= p.image %>" alt=""
                  srcset="<%= base %>-sm.jpg 400w, <%= base %>-md.jpg 800w, <%= base %>-lg.jpg 1200w"
                  sizes="(max-width:480px) 80vw, (max-width:1024px) 40vw, 180px">
              <% } else { %>
                <img src="/images/default-product.jpg" alt="">
              <% } %>
            </div>
            <div class="prd-description">
              <h3 class="prd-title"><%= p.name %></h3>
              <div class="prices"><div class="new-price"><%= Number(p.price).toFixed(2) %> درهم</div></div>
              <form method="POST" action="/admin/products/<%= p._id %>" enctype="multipart/form-data" class="center-button">
                <input type="file" name="image" accept="image/*" required>
                <button class="btn-add" type="submit"><i class="fas fa-upload"></i> تحديث الصورة</button>
              </form>
            </div>
          </article>
        <% }) %>
      </div>
    </div>
  </main>
  <%- include("../../partials/footer") %>
</body>
</html>