<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>إدارة المنتجات</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include("../../partials/header") %>

  <main class="content admin-dashboard" style="padding:2rem;">
    <div class="admin-container">
      <h1>إدارة المنتجات</h1>

  <!-- Add new product form -->
  <div class="admin-card">
    <h2>إضافة منتج جديد</h2>
  <form id="addForm" action="/admin/products" method="POST" class="admin-form" enctype="multipart/form-data">
          <div class="form-row">
            <div class="form-group">
              <label for="name">اسم المنتج *</label>
              <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
              <label for="price">السعر (<%= currencySymbol %>) *</label>
              <input type="number" id="price" name="price" step="1" min="0" required>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="category">القسم *</label>
              <select id="category" name="category" required>
                <option value="">اختر القسم</option>
                <% (categories||[]).forEach(cat => { %>
                  <option value="<%= cat._id %>"><%= cat.name %></option>
                <% }) %>
              </select>
            </div>
            <div class="form-group">
              <label for="stock">الكمية المتوفرة</label>
              <input type="number" id="stock" name="stock" min="0" value="0">
            </div>
          </div>

          <div class="form-group">
            <label for="description">الوصف</label>
            <textarea id="description" name="description" rows="3"></textarea>
          </div>

          <div class="form-group">
            <label for="image">تحميل صورة المنتج</label>
            <input type="file" id="image" name="image" accept="image/*">
          </div>

          <button type="submit" class="btn btn-primary">إضافة المنتج</button>
        </form>
      </div>

      <!-- Products list: table view for admin control -->
      <div class="admin-card">
        <h2>المنتجات الحالية</h2>
        <% if (products && products.length > 0) { %>
          <div class="table-container">
            <table class="admin-products-table">
              <thead>
                <tr>
                  <th>صورة</th>
                  <th>الاسم</th>
                  <th>القسم</th>
                  <th>السعر</th>
                  <th>المخزون</th>
                  <th>إجراءات</th>
                </tr>
              </thead>
              <tbody>
                <% products.forEach(product => { %>
              <tr data-product-id="<%= product._id %>"
            data-name="<%= (product.name||'').replace(/\"/g,'&quot;') %>"
            data-description="<%= (product.description||'').replace(/\"/g,'&quot;') %>"
            data-price="<%= product.price %>"
            data-category-id="<%= product.category?._id || '' %>"
            data-image="<%= product.image || '' %>"
            data-stock="<%= Math.trunc(Number(product.stock || 0)) %>">
                    <td class="td-img">
                      <% if (product.image) { const imgSrc = product.image.startsWith('/') ? product.image : ('/images/products' + product.image); %>
                        <img src="<%= imgSrc %>" alt="<%= product.name %>" width="72" height="72" style="object-fit:cover;border-radius:6px;" />
                      <% } else { %>
                        <img src="/images/default-product.svg" alt="<%= product.name %>" width="72" height="72" style="object-fit:contain;border-radius:6px;background:#fff;padding:6px;" />
                      <% } %>
                    </td>
                    <td class="td-name"><%= product.name %></td>
                    <td class="td-cat"><%= product.category?.name || 'بدون قسم' %></td>
                    <td class="td-price">
                      <% const displayPrice = Number(product.price);
                         const discount = Number(product.discount || 0);
                         const hasDiscount = discount > 0;
                      %>
                      <% if (hasDiscount) { %>
                        <div class="old-price"><%= displayPrice %> <%= currencySymbol %></div>
                        <div class="new-price"><%= Math.round(displayPrice * (1 - discount/100)) %> <%= currencySymbol %></div>
                      <% } else { %>
                        <div class="new-price"><%= displayPrice %> <%= currencySymbol %></div>
                      <% } %>
                    </td>
                    <td class="td-stock"><%= Math.trunc(Number(product.stock || 0)) %></td>
                    <td class="td-actions">
                      <button type="button" class="btn btn-edit" onclick="editProduct('<%= product._id %>')">تعديل</button>
                      <form action="/admin/products/<%= product._id %>/delete" method="POST" style="display:inline;margin-left:.5rem;" onsubmit="return confirm('هل أنت متأكد من حذف هذا المنتج؟')">
                        <button type="submit" class="btn btn-delete">حذف</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="no-data">لا توجد منتجات حالياً</p>
        <% } %>
      </div>
    </div>
  </main>

  <!-- Edit modal -->
  <div id="editModal" class="modal" style="display:none;">
    <div class="modal-content modal-large">
      <span class="close" onclick="closeModal()">&times;</span>
      <h2>تعديل المنتج</h2>
  <form id="editForm" method="POST" class="admin-form" enctype="multipart/form-data">
        <div class="form-row">
          <div class="form-group">
            <label for="edit-name">اسم المنتج *</label>
            <input type="text" id="edit-name" name="name" required>
          </div>
          <div class="form-group">
            <label for="edit-price">السعر (<%= currencySymbol %>) *</label>
            <input type="number" id="edit-price" name="price" step="1" min="0" required>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="edit-category">القسم *</label>
            <select id="edit-category" name="category" required>
              <option value="">اختر القسم</option>
              <% (categories||[]).forEach(cat => { %>
                <option value="<%= cat._id %>"><%= cat.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="edit-stock">الكمية المتوفرة</label>
            <input type="number" id="edit-stock" name="stock" min="0">
          </div>
        </div>

        <div class="form-group">
          <label for="edit-description">الوصف</label>
          <textarea id="edit-description" name="description" rows="3"></textarea>
        </div>

        <div class="form-group">
          <label for="edit-image">صورة المنتج الحالية (اختياري: اختر ملفاً لاستبدالها)</label>
          <div style="display:flex;gap:.5rem;align-items:center">
            <img id="edit-image-preview" src="" alt="معاينة الصورة" style="width:64px;height:64px;object-fit:cover;border:1px solid #e0e0e0;border-radius:4px;" />
            <input type="file" id="edit-image" name="image" accept="image/*">
          </div>
        </div>

        <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
      </form>
    </div>
  </div>

  <%- include("../../partials/footer") %>

  <script>
    function editProduct(id) {
      // find the article element carrying data-attributes
      const el = document.querySelector('[data-product-id="' + id + '"]');
      if (!el) return;
      const name = el.dataset.name || '';
      const description = el.dataset.description || '';
      const price = el.dataset.price || '';
      const categoryId = el.dataset.categoryId || '';
      const image = el.dataset.image || '';
      const stock = el.dataset.stock || 0;

      document.getElementById('editForm').action = '/admin/products/' + id;
      document.getElementById('edit-name').value = name;
      document.getElementById('edit-description').value = description;
      document.getElementById('edit-price').value = price;
      document.getElementById('edit-category').value = categoryId;
      // show current image in preview; the file input stays empty unless admin chooses a file
      const editImageInput = document.getElementById('edit-image');
      const editImagePreview = document.getElementById('edit-image-preview');
      if (image) {
        const imgSrc = image.startsWith('/') ? image : ('/images/' + image);
        if (editImagePreview) editImagePreview.src = imgSrc;
      } else if (editImagePreview) {
        editImagePreview.src = '/images/default-product.svg';
      }
      // clear any previously selected file
      if (editImageInput) editImageInput.value = '';
      document.getElementById('edit-stock').value = stock;
      document.getElementById('editModal').style.display = 'block';
    }

    function closeModal() {
      document.getElementById('editModal').style.display = 'none';
    }

    window.onclick = function(event) {
      const modal = document.getElementById('editModal');
      if (event.target === modal) closeModal();
    }

    // Read-more initialization for admin product descriptions
    document.addEventListener('DOMContentLoaded', function () {
      document.querySelectorAll('.prd-desc').forEach(function (el) {
        try {
          const btn = el.parentElement.querySelector('.read-more');
          if (!btn) return;
          // If content doesn't overflow the clamped area, hide the button
          if (el.scrollHeight <= el.clientHeight) {
            btn.style.display = 'none';
            return;
          }

          btn.style.display = 'inline-block';
          btn.addEventListener('click', function () {
            const isExpanded = el.classList.toggle('expanded');
            btn.setAttribute('aria-expanded', isExpanded);
            btn.textContent = isExpanded ? 'عرض أقل' : 'اقرأ المزيد';
          });
        } catch (e) {
          // defensive: some browsers may not have computed sizes yet
        }
      });
    });
  </script>
  <script>
    // Intercept delete forms in the admin products table and submit via fetch
    document.addEventListener('DOMContentLoaded', function () {
      const table = document.querySelector('.admin-products-table');
      if (!table) return;

      // Delegate submit for delete forms inside the table
      table.addEventListener('submit', function (e) {
        const form = e.target;
        if (form && form.tagName === 'FORM' && form.action && form.action.includes('/admin/products/') && form.action.endsWith('/delete')) {
          e.preventDefault();
          if (!confirm('هل أنت متأكد من حذف هذا المنتج؟')) return;

          const row = form.closest('tr');
          const action = form.action;

          fetch(action, {
            method: 'POST',
            credentials: 'same-origin',
            headers: { 'X-Requested-With': 'XMLHttpRequest' },
            body: new FormData(form)
          }).then(res => {
            // If server returns JSON, try to parse success flag
            if (res.headers.get('content-type') && res.headers.get('content-type').includes('application/json')) {
              return res.json().then(j => ({ ok: res.ok, json: j }));
            }
            return { ok: res.ok };
          }).then(result => {
            if (result && (result.ok && (!result.json || result.json.success))) {
              // Remove the row from the table to stay on same page
              if (row) row.remove();
              alert('تم حذف المنتج');
            } else {
              alert('حدث خطأ أثناء حذف المنتج');
            }
          }).catch(err => {
            console.error(err);
            alert('تعذر الاتصال بالخادم');
          });
        }
      });

      // Intercept edit form submission (modal) to submit via fetch and then refresh page
      const editForm = document.getElementById('editForm');
      if (editForm) {
        editForm.addEventListener('submit', function (e) {
          e.preventDefault();
          const action = editForm.action;
          const fd = new FormData(editForm);

          fetch(action, {
            method: 'POST',
            credentials: 'same-origin',
            body: fd,
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
          }).then(res => {
            if (res.ok) return res.json().catch(() => ({}));
            throw new Error('Request failed');
          }).then(json => {
            // close modal
            const modal = document.getElementById('editModal');
            if (modal) modal.style.display = 'none';
            // refresh page to reflect changes but stay on same admin page
            location.reload();
          }).catch(err => {
            console.error(err);
            alert('فشل حفظ التغييرات');
          });
        });
      }

      // Intercept add-product form submission to submit via AJAX and refresh listing
      const addForm = document.getElementById('addForm');
      if (addForm) {
        addForm.addEventListener('submit', function (e) {
          e.preventDefault();
          const action = addForm.action;
          const fd = new FormData(addForm);
          const submitBtn = addForm.querySelector('button[type="submit"]');
          if (submitBtn) submitBtn.disabled = true;

          fetch(action, {
            method: 'POST',
            credentials: 'same-origin',
            body: fd,
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
          }).then(res => {
            if (res.ok) return res.json().catch(() => ({}));
            throw new Error('Request failed');
          }).then(json => {
            // on success, reload the page to show the new product in the table
            location.reload();
          }).catch(err => {
            console.error(err);
            alert('فشل إضافة المنتج');
          }).finally(() => { if (submitBtn) submitBtn.disabled = false; });
        });
      }
    });
  </script>
  <script>
    // Inline stock editing: click a .td-stock cell to edit and save via AJAX
    (function () {
      let activeEditor = null; // { td, originalText }

      function closeEditor(save) {
        if (!activeEditor) return;
        const { td, originalText, tr } = activeEditor;
        const input = td.querySelector('input.inline-stock-input');
        const controls = td.querySelector('.inline-stock-controls');

        if (!save) {
          td.textContent = originalText;
          td.classList.remove('editing');
          activeEditor = null;
          return;
        }

        // Save: send to server
        const newValRaw = input.value;
        const newVal = Math.trunc(Number(newValRaw || 0));
        const id = tr.dataset.productId;
        if (!id) {
          alert('Unable to determine product id');
          closeEditor(false);
          return;
        }

        // disable controls while saving
        input.disabled = true;
        if (controls) Array.from(controls.querySelectorAll('button')).forEach(b => b.disabled = true);

        const fd = new FormData();
        fd.append('stock', String(newVal));

        fetch('/admin/products/' + id, {
          method: 'POST',
          credentials: 'same-origin',
          body: fd,
          headers: { 'X-Requested-With': 'XMLHttpRequest' }
        }).then(res => {
          if (!res.ok) throw new Error('Server error');
          return res.json().catch(() => ({}));
        }).then(json => {
          // optimistic: update cell and row dataset
          td.textContent = String(newVal);
          tr.dataset.stock = String(newVal);
        }).catch(err => {
          console.error(err);
          alert('فشل تحديث المخزون');
          td.textContent = originalText;
        }).finally(() => {
          td.classList.remove('editing');
          activeEditor = null;
        });
      }

      document.addEventListener('click', function (e) {
        // if click outside active editor, cancel it
        if (activeEditor) {
          const td = activeEditor.td;
          if (!td.contains(e.target)) closeEditor(false);
        }

        const td = e.target.closest && e.target.closest('.td-stock');
        if (!td) return;
        // ignore if already editing
        if (td.classList.contains('editing')) return;

        const tr = td.closest('tr');
        if (!tr) return;
        const productId = tr.dataset.productId;
        if (!productId) return;

        const originalText = (td.textContent || '').trim();
        const initialVal = String(Math.trunc(Number(originalText || tr.dataset.stock || 0)));

        // build editor
        td.classList.add('editing');
        td.innerHTML = '';
        const input = document.createElement('input');
        input.type = 'number';
        input.min = '0';
        input.className = 'inline-stock-input';
        input.value = initialVal;
        input.style.width = '6rem';

        const controls = document.createElement('span');
        controls.className = 'inline-stock-controls';
        controls.style.marginLeft = '.5rem';

        const saveBtn = document.createElement('button');
        saveBtn.type = 'button';
        saveBtn.className = 'btn btn-primary btn-inline-save';
        saveBtn.textContent = 'حفظ';

        const cancelBtn = document.createElement('button');
        cancelBtn.type = 'button';
        cancelBtn.className = 'btn btn-light btn-inline-cancel';
        cancelBtn.textContent = 'إلغاء';

        controls.appendChild(saveBtn);
        controls.appendChild(cancelBtn);
        td.appendChild(input);
        td.appendChild(controls);
        input.focus();

        activeEditor = { td, originalText, tr };

        saveBtn.addEventListener('click', function (ev) { ev.stopPropagation(); closeEditor(true); });
        cancelBtn.addEventListener('click', function (ev) { ev.stopPropagation(); closeEditor(false); });

        input.addEventListener('keydown', function (ev) {
          if (ev.key === 'Enter') { ev.preventDefault(); closeEditor(true); }
          if (ev.key === 'Escape') { ev.preventDefault(); closeEditor(false); }
        });
      });
    })();
  </script>
</body>
</html>
