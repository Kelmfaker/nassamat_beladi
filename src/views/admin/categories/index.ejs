<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>إدارة الأقسام</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include("../../partials/header") %>

  <main class="content admin-dashboard" style="padding:2rem;">
    <div class="admin-container">
      <h1>إدارة الأقسام</h1>

      <!-- Add new category form -->
      <div class="admin-card">
        <h2>إضافة قسم جديد</h2>
        <form action="/admin/categories" method="POST" class="admin-form">
          <div class="form-group">
            <label for="name">اسم القسم</label>
            <input type="text" id="name" name="name" required>
          </div>
          <div class="form-group">
            <label for="description">الوصف</label>
            <textarea id="description" name="description" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">إضافة</button>
        </form>
      </div>

      <!-- Categories list -->
      <div class="admin-card">
        <h2>الأقسام الحالية</h2>
        <% if (categories && categories.length > 0) { %>
          <table class="admin-table">
            <thead>
              <tr>
                <th>الاسم</th>
                <th>الوصف</th>
                <th>الإجراءات</th>
              </tr>
            </thead>
            <tbody>
              <% categories.forEach(category => { %>
                <tr>
                  <td><%= category.name %></td>
                  <td><%= category.description || '-' %></td>
                  <td class="actions">
                    <button onclick='editCategory(<%- JSON.stringify(String(category._id)) %>, <%- JSON.stringify(category.name || '') %>, <%- JSON.stringify(category.description || '') %>)' class="btn btn-edit">تعديل</button>
                    <form action="/admin/categories/<%= category._id %>/delete" method="POST" style="display:inline;" onsubmit="return confirm('هل أنت متأكد من حذف هذا القسم؟')">
                      <button type="submit" class="btn btn-delete">حذف</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p class="no-data">لا توجد أقسام حالياً</p>
        <% } %>
      </div>
    </div>
  </main>
  <!-- Edit modal (moved into this view so inline edit buttons work) -->
  <div id="editModal" class="modal" style="display:none;">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <h2>تعديل القسم</h2>
      <form id="editForm" method="POST">
        <input type="hidden" id="edit-id" name="id" value="">
        <div class="form-group">
          <label for="edit-name">اسم القسم</label>
          <input type="text" id="edit-name" name="name" required>
        </div>
        <div class="form-group">
          <label for="edit-description">الوصف</label>
          <textarea id="edit-description" name="description" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
      </form>
    </div>
  </div>

  <%- include("../../partials/footer") %>

  <script>
    function editCategory(id, name, description) {
      const form = document.getElementById('editForm');
      if (form) {
        form.action = '/admin/categories/' + id;
      }
      const idInput = document.getElementById('edit-id');
      if (idInput) idInput.value = id;
      const nameInput = document.getElementById('edit-name');
      if (nameInput) nameInput.value = name || '';
      const descInput = document.getElementById('edit-description');
      if (descInput) descInput.value = description || '';
      const modal = document.getElementById('editModal');
      if (modal) modal.style.display = 'block';
    }

    function closeModal() {
      const modal = document.getElementById('editModal');
      if (modal) modal.style.display = 'none';
    }

    window.onclick = function(event) {
      const modal = document.getElementById('editModal');
      if (event.target === modal) closeModal();
    }
  </script>
</body>
</html>
