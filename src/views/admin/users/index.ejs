<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>إدارة المستخدمين</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include("../../partials/admin-header") %>

  <main class="content admin-dashboard" style="padding:2rem;">
    <div class="admin-container">
      <h1>إدارة المستخدمين</h1>

      <!-- Add new user form -->
      <div class="admin-card">
        <h2>إضافة مستخدم جديد</h2>
        <form action="/users" method="POST" class="admin-form">
          <div class="form-row">
            <div class="form-group">
              <label for="name">الاسم *</label>
              <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
              <label for="email">البريد الإلكتروني *</label>
              <input type="email" id="email" name="email" required>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="password">كلمة المرور *</label>
              <input type="password" id="password" name="password" required>
            </div>
            <div class="form-group">
              <label for="role">الصلاحية *</label>
              <select id="role" name="role" required>
                <option value="user">مستخدم</option>
                <option value="admin">مدير</option>
              </select>
            </div>
          </div>

          <button type="submit" class="btn btn-primary">إضافة مستخدم</button>
        </form>
      </div>

      <!-- Users list -->
      <div class="admin-card">
        <h2>المستخدمون الحاليون (<%= users.length %>)</h2>
        <% if (users && users.length > 0) { %>
          <div class="table-responsive">
            <table class="admin-table">
              <thead>
                <tr>
                  <th>الاسم</th>
                  <th>البريد الإلكتروني</th>
                  <th>الصلاحية</th>
                  <th>الحالة</th>
                  <th>تاريخ التسجيل</th>
                  <th>الإجراءات</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(u => { %>
                  <tr>
                    <td><%= u.name %></td>
                    <td><%= u.email %></td>
                    <td>
                      <% if (u.role === 'admin') { %>
                        <span class="badge badge-admin">مدير</span>
                      <% } else { %>
                        <span class="badge badge-user">مستخدم</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (u.isActive !== false) { %>
                        <span class="badge badge-active">نشط</span>
                      <% } else { %>
                        <span class="badge badge-inactive">معطل</span>
                      <% } %>
                    </td>
                    <td><%= new Date(u.createdAt).toLocaleDateString('ar-DZ') %></td>
                    <td class="actions">
                      <a href="/admin/users/<%= u._id %>" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                      <button onclick="editUser('<%= u._id %>', '<%= u.name %>', '<%= u.email %>', '<%= u.role %>')" class="btn btn-edit btn-sm">
                        <i class="fas fa-edit"></i>
                      </button>
                      <% if (u._id.toString() !== user._id.toString()) { %>
                        <form action="/admin/users/<%= u._id %>/toggle-active" method="POST" style="display:inline;">
                          <button type="submit" class="btn btn-warning btn-sm" title="<%= u.isActive !== false ? 'تعطيل' : 'تفعيل' %>">
                            <i class="fas fa-<%= u.isActive !== false ? 'ban' : 'check' %>"></i>
                          </button>
                        </form>
                        <form action="/admin/users/<%= u._id %>/delete" method="POST" style="display:inline;" onsubmit="return confirm('هل أنت متأكد من حذف هذا المستخدم؟')">
                          <button type="submit" class="btn btn-delete btn-sm">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                      <% } else { %>
                        <span class="text-muted">(أنت)</span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="no-data">لا يوجد مستخدمون</p>
        <% } %>
      </div>
    </div>
  </main>

  <%- include("../../partials/footer") %>

  <script>
    function editUser(id, name, email, role) {
      // open modal handled client-side
      // For now, navigate to edit route or use a modal
      window.location = '/admin/users/' + id + '/edit';
    }
  </script>
</body>
</html>
